---
export interface Props {
  class?: string;
  title?: string;
}

const { class: className, title } = Astro.props;
---

<header class={`header ${className}`}>
  <div class="start">
    <div class="menu">
      <nav>
        <a href="/">About</a>
        <a href="/graphs">Graphs</a>
      </nav>
    </div>
  </div>
  <div class="content">
    <h1 class="title">{title}</h1>
  </div>
  <div class="end">
    <slot />
  </div>
</header>

<style>
  .header {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    gap: var(--cgd-space-100);

    padding: var(--cgd-space-150) var(--cgd-side-gap);

    background: transparent;
  }

  .start,
  .end {
    flex: 0 1 auto;
  }

  .content {
    flex: 1 1 auto;
  }

  .title {
    margin: 0;

    font-size: var(--cgd-font-size-l);
    text-align: center;
  }

  .menu nav {
    display: flex;
    gap: var(--cgd-space-100);
  }
</style>
