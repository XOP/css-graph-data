---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="card">
  <h2 class="title">{title}</h2>
  <div class="body">
    <slot />
  </div>
</section>

<style>
  .card {
    padding: 1rem;

    background: white;
    border-radius: 10px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);

    text-align: center;
  }

  .title {
    margin: 0;

    font-size: 1.25rem;
  }

  .body {
    margin-top: 0.5rem;

    font-size: 1rem;
  }
</style>
